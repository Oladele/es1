<form {{action "save" on="submit"}}>
	<h2>{{errorMessage}}</h2>

	<div class="form-group">
	  {{input value=model.name classNames='form-control network-site-name' placeholder='Site Name'}}
	</div>

	<div class="form-group">
		{{ g-map-address-input action="updateLocation" classNames='form-control network-site-address'}}
	  
	</div>

	<button type="submit" class="btn btn-primary">Submit</button>
	<button {{action "cancel"}} class="btn btn-default">Cancel</button>
</form>